<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f0ffff">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/SpecialityTv"
        android:text="Speciality"
        android:textColor="#000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        >
    </TextView>

    <TextView
        android:id="@+id/TitleTv"
        android:text="Title"
        android:textColor="#000"
        android:textSize="25dp"
        android:textStyle="bold"
        android:padding="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center">
    </TextView>

    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:background="@drawable/loading"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_20">
    </ImageView>

    <TextView
        android:id="@+id/DescriptionTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desciption"
        android:textSize="20sp"
        android:textAlignment="center"
        android:padding="@dimen/dp_5"
        >
    </TextView>
    <TextView
        android:id="@+id/PhoneTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textColor="#a4c639"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="@dimen/dp_5"
        >
    </TextView>
    <TextView
        android:id="@+id/HospitalTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hospital"
        android:textSize="20sp"
        android:textAlignment="center"
        android:padding="@dimen/dp_5"
        >
    </TextView>
    <TextView
        android:id="@+id/EmailTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20sp"
        android:textAlignment="center"
        android:padding="@dimen/dp_5"
        >
    </TextView>
    <TextView
        android:id="@+id/PriceTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="20sp"
        android:textAlignment="center"
        android:padding="@dimen/dp_5">
    </TextView>

    <TextView
        android:id="@+id/AvailTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Availablity"
        android:textSize="20sp"
        android:textAlignment="center"
        >
    </TextView>

    <Button
        android:drawableLeft="@drawable/search"
        android:paddingLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/MailTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/sendmail"
        android:textColor="#FF6C2737"
        android:textSize="30sp"
        android:background="@drawable/shape_btn"
        />
    <Spinner
        android:id="@+id/spinner_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dropDownWidth="wrap_content"
        android:entries="@array/location"
        android:padding="@dimen/dp_10"
        android:textColorHint="#000"
        android:background="#f0ffff"
        android:layout_margin="@dimen/dp_10" />
    <Button
        android:drawableLeft="@drawable/inquery"
        android:paddingLeft="@dimen/dp_10"
        android:id="@+id/InqueryTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/subscribe"
        android:textColor="#FF6C2737"
        android:textSize="30sp"
        android:background="@drawable/shape_btn"
        />
</LinearLayout>

</ScrollView>