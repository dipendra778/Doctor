<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main1"
    android:fitsSystemWindows="true">

<ScrollView
    android:id="@+id/scrollView_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="closekeyboard"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#387089">

        </android.support.v7.widget.Toolbar>


        <ViewFlipper
            android:id="@+id/photo_fliper"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:onClick="closekeyboard" />

        <AutoCompleteTextView
            android:layout_marginTop="@dimen/dp_60"
            android:id="@+id/Specialist"

            android:drawableLeft="@drawable/expert"
            android:drawablePadding="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="@string/specialist"
            android:textSize="@dimen/sp_20"
            android:textColorHint="@color/hintEditText"
            android:background="@drawable/shape_et"
            />

        <AutoCompleteTextView
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/location"

            android:drawableLeft="@drawable/newlocation"
            android:drawablePadding="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="@string/location"
            android:textSize="@dimen/sp_20"
            android:textColorHint="@color/hintEditText"
            android:background="@drawable/shape_et"/>

        <Button
            android:layout_marginTop="@dimen/dp_60"
            android:id="@+id/clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/clear"
            android:textSize="30sp"
            android:textColor="#FF6C2737"
            android:background="@drawable/shape_btn"/>

        <Button
            android:drawableLeft="@drawable/search"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/search"
            android:textColor="#FF6C2737"
            android:textSize="30sp"
            android:background="@drawable/shape_btn"
            />


    </LinearLayout>


</ScrollView>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigationview"
        style="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="@dimen/dp_310"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/drawer_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>