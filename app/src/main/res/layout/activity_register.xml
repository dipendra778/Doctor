<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/scrollView_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fffff0">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:onClick="closekeyboard"
    tools:context=".Register.RegisterActivity">

    <EditText
        android:id="@+id/edittext_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/Name"
        android:inputType="text"
        android:textColorHint="#000"
        android:padding="@dimen/dp_10"
        android:background="#f0ffff"
        android:layout_margin="@dimen/dp_10" />

    <EditText
        android:id="@+id/edittext_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/docLocation"
        android:inputType="text"
        android:textColorHint="#000"
        android:padding="@dimen/dp_10"
        android:background="#f0ffff"
        android:layout_margin="@dimen/dp_10"
        android:onClick="closekeyboard"/>

    <EditText
        android:id="@+id/edittext_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/docPrice"
        android:inputType="text"
        android:padding="@dimen/dp_10"
        android:textColorHint="#000"
        android:background="#f0ffff"
        android:layout_margin="@dimen/dp_10"
        android:onClick="closekeyboard"/>

    <Spinner
        android:id="@+id/spinner_spe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:dropDownWidth="wrap_content"
        android:entries="@array/speciality"
        android:padding="@dimen/dp_10"
        android:textColorHint="#000"
        android:background="#f0ffff"
        android:layout_margin="@dimen/dp_10" />

    <EditText
        android:id="@+id/edittext_aviablity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/docAvailablity"
        android:inputType="text"
        android:textColorHint="#000"
        android:background="#f0ffff"
        android:padding="@dimen/dp_10"
        android:layout_margin="@dimen/dp_10"
        android:onClick="closekeyboard"/>

    <EditText
        android:id="@+id/edittext_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/docPhone"
        android:inputType="phone"
        android:textColorHint="#000"
        android:background="#f0ffff"
        android:padding="@dimen/dp_10"
        android:layout_margin="@dimen/dp_10"
        android:onClick="closekeyboard"/>


    <EditText
        android:id="@+id/edittext_Hospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/docHospital"
        android:inputType="text"
        android:textColorHint="#000"
        android:background="#f0ffff"
        android:padding="@dimen/dp_10"
        android:layout_margin="@dimen/dp_10"
        android:onClick="closekeyboard"/>
    <EditText
        android:id="@+id/edittext_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/docEmail"
        android:inputType="textEmailAddress"
        android:padding="@dimen/dp_10"
        android:textColorHint="#000"
        android:background="#f0ffff"
        android:layout_margin="@dimen/dp_10"
        android:onClick="closekeyboard"/>

    <EditText
        android:id="@+id/edittext_Qualification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/docQual"
        android:padding="@dimen/dp_10"
        android:textColorHint="#000"
        android:background="#f0ffff"
        android:layout_margin="@dimen/dp_10"
        android:onClick="closekeyboard"/>

    <EditText
        android:id="@+id/edittext_Search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/docLoc"
        android:inputType="textEmailAddress"
        android:padding="@dimen/dp_10"
        android:textColorHint="#000"
        android:background="#f0ffff"
        android:layout_margin="@dimen/dp_10"
        android:onClick="closekeyboard"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/btnInsert"
        android:textColorHint="#000"
        android:textSize="@dimen/dp_20"
        android:background="@drawable/shape_btn"/>


    <Button
        android:id="@+id/email_sign_out_button"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/sign_out"
        android:textStyle="bold"
        android:textColorHint="#000"
        android:textSize="@dimen/dp_20"
        android:background="@drawable/shape_btn"
        />
</LinearLayout>
</ScrollView>